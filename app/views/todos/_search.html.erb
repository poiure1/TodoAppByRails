<%= form_with method: :get do |form| %>
    <div class="flex items-center space-x-3 pb-5">
      <%= form.text_field "text",  class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-600 focus:border-transparent" %>
      <%= form.submit "Search", class: "rounded-lg px-3 py-2 bg-orange-600 w-fit text-white hover:bg-orange-800 " %>
    </div>
<% end %>